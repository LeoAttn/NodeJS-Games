extends layout

block content
    div
        div.accountLeftBlock
            img(class = "avatar big" src = user.avatarLink)
        div.accountRightBlock
            form(action = "/user/update" enctype="multipart/form-data" method = "post")
                div.form-group
                    label.control-label(for = "pseudo") Nom d'utilisateur
                    input.form-control(type = "text" name = "pseudo" value=user.pseudo)
                div.form-group
                    label.control-label(for = "first_name") Pr√©nom
                    input.form-control(type = "text" name = "first_name" value=user.first_name)
                div.form-group
                    label.control-label(for = "last_name") Nom
                    input.form-control(type = "text" name = "last_name" value=user.last_name)
                div.form-group
                    label.control-label(for = "email") Email
                    input.form-control(type = "mail" name = "email" value=user.email)
                div.form-group
                    label.control-label(for = "avatar") Avatar
                    input(type="file" name="avatar")
                 div.form-group
                        button.btn.btn-primary.btn-lg(name = "submit") Editer

block script
    script(src="/javascripts/account.js")