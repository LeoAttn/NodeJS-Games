extends layout

block content
    h1.center Tableau des victoires

    div.list-room
        table.table.table-striped.table-bordered
            thead
                th.center Nom du vainqueur
                th.center Nombre de tours
                th.center Temps
                th.center Date
            each score in scores
                tr.room
                    td= score.owner
                    td= Math.round(score.nbLap / 2)
                    td= Math.trunc(score.time / 1000) + "," + Math.round(score.time % 1000 / 100) + " s"
                    td!= score.createdOn