doctype html
html
    head
        title= title

        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/style.css' type="text/css")
        link(rel='stylesheet', href='/stylesheets/jumbotron.css' type="text/css")
        link(rel='icon', href='/favicon.png', type='image/png')
        meta(charset='utf-8')

    body
        div.container
            div.header.clearfix
                nav
                    ul.nav.nav-pills.pull-right
                        if session && session.roomID && !noReturnParty
                            li(role='presentation')
                                a(href='/play?id='+(session.roomID)) Partie en cours
                        if session && session.isAuthenticated
                            li(role='presentation')
                                a(href='/user/account?username='+(session.username)) Mon compte
                            li(role='presentation')
                                a(href='/sign-out') DÃ©connexion
                        else
                            li(role='presentation')
                                a(href='/sign-in') Connexion
                            li(role='presentation')
                                a(href='/sign-up') S'inscrire
                        li.active(role='presentation')
                            a(href='/') Home
                        li(role='presentation')
                            a(href='#') Highscores
                    h3.text-muted= title
            block content

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
        script(src="https://cdn.socket.io/socket.io-1.3.7.js")

        block script
